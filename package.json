{
  "name": "gad-tests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check": "npm run format && npm run lint && npm run tsc:check",
    "format": "npx prettier --write .",
    "format:check": "npx prettier . --check \"!**.ts\"",
    "lint": "npx eslint . --max-warnings=0",
    "tsc:check": "npx tsc --noEmit --pretty --strict",
    "test": "npx playwright test",
    "test:headed": "npm run test -- --headed",
    "test:ui-mode": "npm run test -- --ui",
    "show-report": "npx playwright show-report",
    "test:tag": "npx playwright test --grep \"@GAD-R01-01|@GAD-R01-02\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@faker-js/faker": "^9.6.0",
    "@playwright/test": "^1.51.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.13.10",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.26.1"
  }
}
